{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": "",
    "do_api_token": ""
  },
  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "us-east-1",
    "source_ami": "ami-0b33d91d",
    "instance_type": "t2.micro",
    "ssh_username": "ec2-user",
    "ami_name": "chambyweb {{timestamp}}"
  }],
  "provisioners": [{
    "type": "shell",
    "inline": [
      "sleep 30",
      "sudo yum install -y httpd",
      "sudo bash -c \"echo '<h1>Welcome to chamby.io!</h1><br>' > /var/www/html/index.html \"",
      "sudo bash -c \"echo '<h1>You are connected to: ' >> /var/www/html/index.html\"",
      "sudo bash -c \"echo $HOSTNAME >> /var/www/html/index.html\"",
      "sudo bash -c \"echo '</h1>' >> /var/www/html/index.html\"",
      "sudo chkconfig httpd on",
      "sudo shutdown -r now"
    ]
  }]

}
